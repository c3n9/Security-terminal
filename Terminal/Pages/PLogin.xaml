<Page x:Class="Terminal.Pages.PLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Terminal.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PLogin"
      Loaded="Page_Loaded">

    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Border Background="#ff9619"
                    CornerRadius="15"
                    BorderThickness="4"
                    BorderBrush="#ff9619"
                    Margin="0,0,0,10">
                <TextBlock Text="Вход в систему по коду"
                           HorizontalAlignment="Center"/>

            </Border>
            <TextBox x:Name="TBCodeEmployee" Text="9404040"/>
            <Button x:Name="BLogin"
                    Content="Войти"
                    Click="BLogin_Click"
                    Background="White"
                    BorderBrush="#ff9619"
                    BorderThickness="2"
                    Width="240"
                    Margin="0,10,0,0"/>
            
        </StackPanel>
    </Grid>
</Page>
